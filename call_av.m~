% for interface

figure(101);

a = -0.0002953;   % gradient of first 100 time points for normalization
ht  = uicontrol('Style','text', ...
    'Position',[left1 bot3-0.5*bot14 wid1 1.5*height], ...
    'String','Normalization factor',...
    'BackgroundColor', roza);
ha = uicontrol('Style','edit', ...
    'Position',[left2 bbot3-0.5*bbot16 wid2+0.2 1.5*height], ...
    'String',num2str(a),...
    'BackgroundColor','w',...
    'Callback','a = str2num(get(ha,''String''));');

